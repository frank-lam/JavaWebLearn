package lesson03;

public class Demo01 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		//线程实现的方式 (1) - 继承Thread 
	/*	使用步骤
		1.定义类继承Thread
		2.重写run方法
		3.把新线程要做的事写在run方法中
		4.创建线程对象
		5.开启新线程, 内部会自动执行run方法*/
		
		//使用子线程
		/**
		 * 主线程，程序员不能创建
		 */
		
	}

}

class MyThread extends Thread{
	
	@Override
	public void run() {
		System.out.println("银行信用卡还款短信任务...");
	}
}
